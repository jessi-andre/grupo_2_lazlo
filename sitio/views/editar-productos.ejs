<!DOCTYPE html>
<html lang="es">
   <%-include('./partials/head')%> 

   <body>
         
   <%-include('./partials/header')%> 

   <main>

    <section class="formularioProducto">

        <h2>Editar producto</h2> 

        <form class="row g-3" action="/productos/editar-productos/<%= producto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="col-md-6">
              <label for="inputNombre" class="form-label">Nombre del Producto:</label>
              <input type="text" class="form-control" name="name" id="inputNombre" value="<%= producto.name %>">
            </div>
            <div class="col-md-6">
                <label for="inputPrecio" class="form-label">Precio del Producto:</label>
                <input type="number" class="form-control" name="price" id="inputPrecio" value="<%= producto.price %>">
              </div>

            <div class="col-12">
              
              <p>Colores:</p>

              <% colores.forEach(color => { %>
                <input type="checkbox" id="<%= color.name %>" name="color" value="<%= color.id %>">
                 <label for="<%= color.name %>"><%= color.name %></label><br>
              <% }) %>
            </div>
            <% if(producto.size) { %>
              <div class="col-12">
                <p>Talles:</p>
                <% talles.forEach(talle => { %>
                  <input type="checkbox" id="<%= talle.name %>" name="talle" value="<%= talle.id %>">
                   <label for="<%= talle.name %>"><%= talle.name %></label><br>
                <% }) %>
              </div>
            <% } %>
            <div class="col-md-6">
              <label for="inputCaregoria" class="form-label">Caregoria:</label>
              <select id="inputCategoria" class="form-select" name="category">
                <% categorias.forEach(categoria => { %>
                  <option name="category" value="<%= categoria %>" <%= categoria === producto.category ? 'selected' : null %>><%= categoria.name %></option>
                <% }) %>
              </select>
            </div>
            <div class="col-md-6">
                <label for="inputImage" class="form-label">Imagen del Producto:</label>
                <input class="form-control" name="product" type="file" id="inputImage" value="<%= producto.image %>">
              </div>
            <div class="col-md-12">
                <label for="inputDescrption" class="form-label">Descripción del Producto:</label>
                <textarea class="form-control" name="description" id="inputDescrption" rows="3" ><%= producto.description %></textarea>
              </div>
            <div class="col-md-12 col-sm-12">
              <button type="submit" class="btn marron col-md-12 col-sm-12">Editar producto</button>
            </div>
          </form>

    </section>

</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>

<%-include('./partials/footer')%> 
</body>


</html>